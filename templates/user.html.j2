{% extends "base.html.j2" %}
{% import "bootstrap/wtf.html" as wtf %}

{% block page_content %}
<div class="page-header">
    <h1>Hello, {{ name }}.</h1>
    <h2>It's the week of {{ moment(week_begin).format("MMMM	Do, YYYY") }}</h2>
    {% if content %}
    <div>{{ content }}</div>
    {% endif %}
    {{ wtf.quick_form(form) }}
</div>
{% endblock %}