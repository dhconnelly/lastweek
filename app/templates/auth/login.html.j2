{% extends "base.html.j2" %}
{% import "bootstrap/wtf.html" as wtf %}

{% block title %}lastweek | login{% endblock %}

{% block page_content %}
<div class="page-header">
    <h1>Login</h1>
</div>
<div class="col-md-4">
    {{ wtf.quick_form(form) }}
</div>
<div>
    <h5>New user?</h5>
    <a href="{{ url_for('auth.register') }}">Click here to register</a>
</div>
<div>
    <h5>Trouble logging in?</h5>
    <a href="{{ url_for('auth.request_reset') }}">Reset your password</a>
</div>
{% endblock %}